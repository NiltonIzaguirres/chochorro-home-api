generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id                      String   @id @default(uuid())
  nameOfPersonResponsible String
  email                   String   @unique
  password_hash           String
  cep                     String
  address                 String
  phone                   String
  createdAt               DateTime @default(now())
  Pet                     Pet[]

  @@map("orgs")
}

enum ShapeLevel {
  SMALL
  MEDIUM
  BIG
}

enum TraitLevel {
  LOW
  MEDIUM
  HIGH
}

enum EnvironmentLevel {
  LITTLE
  MEDIUM
  WIDE
}

model Pet {
  id           String           @id @default(uuid())
  name         String
  about        String
  age          Int
  shape        ShapeLevel
  energy       Int
  independence TraitLevel
  environment  EnvironmentLevel
  images       File[]
  createdAt    DateTime         @default(now())

  Org   Org    @relation(fields: [orgId], references: [id])
  orgId String

  @@map("pets")
}

model File {
  id        String   @id
  name      String
  key       String
  createdAt DateTime @default(now())

  pet   Pet    @relation(fields: [petId], references: [id])
  petId String

  @@map("files")
}
